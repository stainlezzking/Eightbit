<%- include("partials/nav.ejs") -%>
    <!-- Header -->
    <div class="header  mb-3">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 id="user" class="h2 text-dark d-inline-block mb-0 text-white"> <%= admin.username.toUpperCase() %> </h6>
            </div>
          
          </div>
     </div>
    </div>
</div>
  <div class="container">
        <div class="header">
            <h3 class="text-white"> Investor's Requests</h3>
        </div>
        <ul class="body_details list-group" role="button">
          <% if(admin.contactus) {%>
             <% if(admin.contactus.length){ %>
               <% admin.contactus.forEach(contact=>{ %>
                  <li  target-id="<%= contact._id %>" style="cursor:pointer;" class="account list-group-item check_details d-flex justify-content-between align-items-center" role="button">
                    <h4 class="account_username ">
                        <%= contact.name%>
                    </h4>
                    <div class="account_details" style="display: none;">
                      <input type="hidden" name="name" value="<%=contact.name%>">
                      <input type="hidden" name="body" value="<%= contact.body %>">
                      <input type="hidden" name="email" value="<%= contact.email %>">
                    </div>
                </li>
              <%  }) %>
             <%  } else{%>
              <li class="account list-group-item check_details d-flex justify-content-between align-items-center" role="button">
                <h4 class="account_username ">
                    NO Body trying to reach us out at the moment
                </h4>
            </li>
             <% } %>
         <% } %>
          </ul>
  </div>     
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script>
 let  myModal = new bootstrap.Modal(document.getElementById('myModal'))
  // check for details
  document.querySelectorAll(".check_details").forEach(detail=>{
    detail.addEventListener("click", function(e){
      detail.querySelectorAll(".account_details input").forEach(input=>{
          input.name == "name" ? document.querySelector("#myModal .name").innerText = input.value : false;
          input.name == "body" ? document.querySelector("#myModal .modal-body").innerText = input.value : false;
          input.name == "email" ? document.querySelector("#myModal .email").innerText = input.value : false;
        myModal.show()
      })
    })
  })
</script>
